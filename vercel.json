{
  "version": 2,
  "name": "synthara-ai",
  "rewrites": [
    { "source": "/", "destination": "/index.html" },
    { "source": "/about", "destination": "/about.html" },
    { "source": "/transformers", "destination": "/transformers.html" },
    { "source": "/ai-ethics", "destination": "/ai-ethics.html" },
    { "source": "/advanced-ai", "destination": "/advanced-ai.html" },
    { "source": "/documentation", "destination": "/documentation.html" },
    { "source": "/partners", "destination": "/partners.html" },
    { "source": "/settings", "destination": "/settings.html" },
    { "source": "/terms", "destination": "/terms.html" }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        { "key": "X-Content-Type-Options", "value": "nosniff" },
        { "key": "X-Frame-Options", "value": "DENY" },
        { "key": "X-XSS-Protection", "value": "1; mode=block" },
        { "key": "Referrer-Policy", "value": "strict-origin-when-cross-origin" },
        { "key": "Permissions-Policy", "value": "camera=(), microphone=(), geolocation=()" },
        { "key": "Content-Security-Policy", "value": "default-src 'self'; script-src 'self'; style-src 'self' 'unsafe-inline'; img-src 'self' data:; font-src 'self'; connect-src 'self';" }
      ]
    }
  ]
}
